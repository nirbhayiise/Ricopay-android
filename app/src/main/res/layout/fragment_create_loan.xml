<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingTop="40dp">



    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/all_fragment_bg"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            android:gravity="center">


            <EditText
                android:id="@+id/acc_no"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:inputType="number"
                android:hint="Account no"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/amount"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Amount"
                android:singleLine="true"
                android:inputType="number"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/purpose"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Purpose"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/bvn"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="BVN"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/bankacc_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Bank Acount Name"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/bankacc_no"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Bank Account no"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/bank_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Bank Name"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <TextView

                android:id="@+id/upld"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:text="Pay Type"

                android:fontFamily="@font/avn_bold"
                android:padding="10dp"/>
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/paytyp"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/pay_type"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:hint="Pay Type"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/int_rate"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Interest Rate"
                android:inputType="number"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/nationality"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Nationality"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/occupation"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Occupation"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/employment"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Employment"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <EditText
                android:id="@+id/officeaddress"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Office Address"
                android:singleLine="true"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />
            <TextView


                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="Select Identification Type"
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"
                android:padding="10dp"/>
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/id_card"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/idcard_no"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_fragment_bg"
                android:fontFamily="@font/avn"

                android:hint="Identification Card No"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/staff_id"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="Names"
                android:singleLine="true"
                android:visibility="gone"
                android:fontFamily="@font/avn"
                android:paddingLeft="10dp"
                android:background="@drawable/all_fragment_bg"
                />


            <TextView
                android:id="@+id/loanbtn"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="Loan Apply "
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_back" />
        </LinearLayout>


        </ScrollView>

    </LinearLayout>




</RelativeLayout>