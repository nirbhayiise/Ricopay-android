<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spl"
    tools:context=".SignupActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/names"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Names"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"
            />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Mobile"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"
            />

        <EditText
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Address"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Email"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"
            />


        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Username"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Password"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/right_id"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/store_id"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>


        <EditText
            android:id="@+id/file_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="File_name"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/dob"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="DOB"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/id_no"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="ID No"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/relative1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Relative 1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/relative_mobile1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Relative Mobile 1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>



        <EditText
            android:id="@+id/relative2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Relative 2"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/relative_mobile2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Relative Mobile 2"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/guarantor"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Guarantor"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>

        <EditText
            android:id="@+id/guarantor_mobile"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="Guarantor Mobile"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_line_round_bg"/>



        <TextView
            android:id="@+id/signbtn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Signup"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_back" />

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>